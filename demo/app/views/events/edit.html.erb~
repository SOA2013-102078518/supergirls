<%= form_for @event, :url => { :controller => 'events', :action => 'update', :id => @event } do |f| %>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :price, "Price" %>
    <%= f.text_field :price %>
    <br>
    <b> Picture </b><br/>
    <%= f.file_field :pic, size: "10x10" %>
    <br>
    <%= f.label :description, "Description" %>
    <%= f.text_area :description, size: "45x10" %>
    <br>
    <%= f.submit "Update" %>
    <%= f.submit "Giveup" %>
<% end %>

