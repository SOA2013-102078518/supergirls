<%= form_for @event, :url => { :controller => 'events', :action => 'update', :id => @event } do |f| %>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :price, "Price" %>
    <%= f.text_field :price %>
    <br>
    <%= f.label :image, "Image" %>
    <%= f.text_field :image %>
    <br>
    <%= f.label :description, "Description" %>
    <%= f.text_area :description %>
    <br>
    <%= f.submit "Update" %>
    <%= f.submit "Giveup" %>
<% end %>
