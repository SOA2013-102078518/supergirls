<%= form_for @event, :url => { :controller => 'events', :action => 'create' } do |f| %>
<h1>New item</h1>




    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :price, "Price" %>
    <%= f.text_field :price %>
    <br>
    <p>
      <b> Picture </b><br/>
      <%= f.file_field :pic %>
    </p>
    <%= f.label :description, "Description" %>
    <%= f.text_area :description %>
    <br>
    <%= f.submit "Create" %>
    <%= f.submit "Giveup" %>
<% end %>
