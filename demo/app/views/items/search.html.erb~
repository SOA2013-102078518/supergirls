<%= form_tag events_path, :method => 'get' do %>  
  <p>  
    <%= text_field_tag :search, params[:search] %>  
    <%= submit_tag "Search", :name => nil %>
       <% if (@events.empty?) %>
       <p>No events found.</p>
       <% else %>
         <% @events.each do |event| %>  
         <p><%= link_to "#{event.name}", event %></p>
       <% end %>
  <% end %>
