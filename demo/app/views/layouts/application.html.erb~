  <% if current_consumer %>
    <%= link_to('log out', destroy_consumer_session_path, :method => :delete) %> |
    <%= link_to('change pwd', edit_registration_path(:user)) %>
  <% else %>
    <%= link_to('register', new_registration_path(:consumer)) %> |
    <%= link_to('log in', new_session_path(:consumer)) %>
  <% end %>
